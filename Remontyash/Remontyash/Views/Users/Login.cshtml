@model Remontyash.ViewModels.LoginModel

@{
    Layout = "~/Views/Shared/_layoutNoMenu.cshtml";
    ViewData["Title"] = "Авторизация";

}
<div class="auth-block">
    
    <div class="row">
            <form asp-action="Login" class="auth-form">
                <h2>Авторизация</h2> 
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-field">
                    <input asp-for="Login" class="form-control" />
                    <label asp-for="Login" class="control-label"></label>
                    <span asp-validation-for="Login" class="helper-text" data-error="Не заполнено" data-success="Заполнено"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Password" class="form-control" />
                    <label asp-for="Password" class="control-label"></label>
                    <span asp-validation-for="Password" class="helper-text" data-error="Не заполнено" data-success="Заполнено"></span>
                </div>
                <div class="form-group center">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Войти
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .auth-block{
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-content:center;
        margin-left:-300px;
        height:100vh
    }
    .auth-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .input-field {
        width: 100%;
    }
    .center{
        display:flex;
        justify-content:center;
    }

</style>
