@model IEnumerable<Remontyash.Models.TypeJob>

@{
    ViewData["Title"] = "Тип работ";
}

<h1>Тип работ</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Описание типа работ
            </th>
            <th>
                Стоимость
            </th>
            <th>
                Тип техники
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeTechnic.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeJobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TypeJobId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TypeJobId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
